---
import Layout from '@delegateml/shared/layouts/Layout.astro';
import Header from '@delegateml/shared/components/Header.astro';
import Hero from '@delegateml/shared/components/Hero.astro';
import Footer from '@delegateml/shared/components/Footer.astro';
import Section from '@delegateml/shared/components/Section.astro';

const siteBase = '/data-reconciliation';
---

<Layout 
  title="Stop Reconciling Ad Data Every Friday" 
  description="We turn messy exports from Meta/Google/TikTok/LinkedIn into one reconciled, client-ready report."
  siteName="DelegateML Data"
  siteBase={siteBase}
>
  <Header 
    siteName="Data Reconciliation"
    navItems={[
      { label: "How it Works", href: "#how-it-works" },
      { label: "Pricing", href: "#pricing" },
      { label: "FAQ", href: "#faq" }
    ]}
    actions={[
      { label: "Get Free Template", href: "#" }
    ]}
  />

  <main>
    <Hero 
      title="Stop reconciling ad data every Friday"
      subtitle="We turn messy exports from Meta/Shopify/GA4 into one reconciled, client-ready report with an exceptions listâ€”so you can close the week fast."
      primaryAction={{ label: "Get Free Template", href: "#" }}
      secondaryAction={{ label: "Book Sanity Check", href: "#" }}
    />

    <Section id="how-it-works" class="bg-stone-50">
      <h2 class="font-display font-bold text-3xl text-center mb-8">Component Smoke Test</h2>
      <p class="text-center text-stone-600">If you see this styled nicely, Phase 2 is a success.</p>
    </Section>
  </main>

  <Footer 
    siteName="Data Reconciliation"
    links={[
      { 
        title: "Product", 
        items: [
          { label: "Features", href: "#" },
          { label: "Pricing", href: "#" }
        ] 
      }
    ]}
  />
</Layout>