---
interface Props {
  class?: string;
  id?: string;
  dark?: boolean;
}

const { class: className, id, dark = false } = Astro.props;

const baseClass = "w-full py-16 md:py-24 relative overflow-hidden";
const colorClass = dark 
  ? "bg-stone-900 text-stone-50" 
  : "bg-stone-50 text-stone-900";
---

<section id={id} class:list={[baseClass, colorClass, className]}>
  <div class="container relative z-10">
    <slot />
  </div>
  
  {/* Optional background decoration slot for complex sections */}
  <slot name="background" />
</section>

<style>
  /* Ensure container class from global styles is respected but we can override if needed */
  .container {
    width: 100%;
    max-width: var(--site-max-width);
    margin-left: auto;
    margin-right: auto;
    padding-left: var(--site-padding);
    padding-right: var(--site-padding);
  }
</style>