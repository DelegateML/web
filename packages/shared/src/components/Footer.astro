---
import Logo from './Logo.astro';

interface Props {
  siteName?: string;
  links?: { title: string; items: { label: string; href: string }[] }[];
}

const { siteName, links = [] } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="bg-stone-100 border-t border-stone-200 py-12 md:py-16">
  <div class="container grid grid-cols-1 md:grid-cols-4 gap-12">
    
    <!-- Brand Column -->
    <div class="md:col-span-1 space-y-6">
      <div class="flex flex-col gap-4">
        <a href="/" class="block text-stone-900 hover:text-teal-800 transition-colors" aria-label="DelegateML Home">
          <Logo height={40} />
        </a>
        <p class="text-sm text-stone-500 leading-relaxed max-w-xs">
          DelegateML builds specialized tools for modern B2B teams. 
          {siteName && <span class="block mt-2 font-medium text-teal-800">{siteName}</span>}
        </p>
      </div>
    </div>

    <!-- Link Columns -->
    <div class="md:col-span-3 grid grid-cols-2 md:grid-cols-3 gap-8">
      {links.map(column => (
        <div>
          <h4 class="font-display font-semibold text-stone-900 mb-4">{column.title}</h4>
          <ul class="space-y-3">
            {column.items.map(link => (
              <li>
                <a href={link.href} class="text-stone-600 hover:text-teal-700 text-sm transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      
      <!-- Default Parent Links if none provided or as extra -->
      <div>
        <h4 class="font-display font-semibold text-stone-900 mb-4">DelegateML</h4>
        <ul class="space-y-3">
          <li><a href="#" class="text-stone-600 hover:text-teal-700 text-sm">About Us</a></li>
          <li><a href="#" class="text-stone-600 hover:text-teal-700 text-sm">Contact</a></li>
          <li><a href="#" class="text-stone-600 hover:text-teal-700 text-sm">Privacy Policy</a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container mt-12 pt-8 border-t border-stone-200 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-stone-500">
    <p>&copy; {year} DelegateML Ltd. All rights reserved.</p>
    <p>Made in London, UK ðŸ‡¬ðŸ‡§</p>
  </div>
</footer>