---
interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<div class:list={["p-6 md:p-8 rounded-2xl bg-white border border-stone-200 shadow-sm hover:shadow-md transition-shadow duration-300", className]}>
  <div class="w-12 h-12 bg-teal-50 text-teal-700 rounded-xl flex items-center justify-center mb-6">
    <slot name="icon">
      {/* Default dot if no icon provided */}
      <div class="w-3 h-3 rounded-full bg-teal-600"></div>
    </slot>
  </div>
  
  <h3 class="font-display font-bold text-xl text-stone-900 mb-3">
    {title}
  </h3>
  
  <p class="text-stone-600 leading-relaxed">
    {description}
  </p>
</div>