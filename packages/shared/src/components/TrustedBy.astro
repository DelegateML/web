---
import Section from './Section.astro';

interface Props {
  title?: string;
}

const { title = "Trusted by forward-thinking teams" } = Astro.props;
---

<Section class="py-12 border-b border-stone-200 bg-stone-50">
  <p class="text-center text-sm font-semibold text-stone-500 uppercase tracking-wider mb-8">
    {title}
  </p>
  
  <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 opacity-60 grayscale hover:grayscale-0 transition-all duration-500">
    <slot />
  </div>
</Section>