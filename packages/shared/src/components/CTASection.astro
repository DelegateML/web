---
// CTA Section Component
// Final call-to-action section with prominent button

interface Props {
  title: string;
  description?: string;
  cta: {
    text: string;
    href: string;
  };
  variant?: 'light' | 'dark' | 'accent';
}

const { title, description, cta, variant = 'dark' } = Astro.props;

const sectionClass = variant === 'dark' 
  ? 'cta-dark' 
  : variant === 'accent' 
    ? 'cta-accent' 
    : 'cta-light';
---

<section class={sectionClass} aria-labelledby="cta-heading">
  <div class="cta-container">
    <h2 id="cta-heading" class="cta-title">
      {title}
    </h2>
    
    {description && (
      <p class="cta-description">{description}</p>
    )}
    
    <a href={cta.href} class="cta-button">
      {cta.text}
    </a>
  </div>
</section>

<style>
  .cta-light {
    padding: var(--section) 0;
    background-color: var(--bg-surface);
  }
  
  .cta-dark {
    padding: var(--section) 0;
    background-color: var(--bg-dark);
    color: var(--text-inverse);
  }
  
  .cta-accent {
    padding: var(--section) 0;
    background-color: var(--accent);
    color: var(--text-inverse);
  }
  
  .cta-container {
    max-width: var(--max-narrow);
    margin: 0 auto;
    padding: 0 var(--space-l);
    text-align: center;
  }
  
  .cta-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--space-m);
    font-family: var(--font-display);
  }
  
  .cta-dark .cta-title,
  .cta-accent .cta-title {
    color: var(--text-inverse);
  }
  
  .cta-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
  }
  
  .cta-dark .cta-description {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .cta-accent .cta-description {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-m) var(--space-2xl);
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: var(--radius-m);
    text-decoration: none;
    transition: all var(--transition-fast) ease;
    cursor: pointer;
    border: none;
  }
  
  .cta-light .cta-button {
    background-color: var(--accent);
    color: var(--text-inverse);
  }
  
  .cta-light .cta-button:hover {
    background-color: var(--accent-hover);
    text-decoration: none;
  }
  
  .cta-dark .cta-button {
    background-color: var(--text-inverse);
    color: var(--accent);
  }
  
  .cta-dark .cta-button:hover {
    background-color: var(--bg-surface);
    text-decoration: none;
  }
  
  .cta-accent .cta-button {
    background-color: var(--text-inverse);
    color: var(--accent);
  }
  
  .cta-accent .cta-button:hover {
    background-color: var(--bg-surface);
    text-decoration: none;
  }
</style>
