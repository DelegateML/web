---
interface Props {
  cols?: 2 | 3 | 4;
  class?: string;
}

const { cols = 3, class: className } = Astro.props;

const gridCols = {
  2: "md:grid-cols-2",
  3: "md:grid-cols-2 lg:grid-cols-3",
  4: "md:grid-cols-2 lg:grid-cols-4"
};
---

<div class:list={["grid grid-cols-1 gap-8", gridCols[cols], className]}>
  <slot />
</div>