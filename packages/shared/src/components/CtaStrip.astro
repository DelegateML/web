---
import Section from './Section.astro';
import Button from './Button.astro';

interface Props {
  title: string;
  description?: string;
  action: { label: string; href: string };
}

const { title, description, action } = Astro.props;
---

<Section class="bg-teal-900 text-white text-center py-20">
  <div class="max-w-3xl mx-auto space-y-8">
    <h2 class="font-display font-bold text-3xl md:text-5xl tracking-tight">
      {title}
    </h2>
    
    {description && (
      <p class="text-teal-100 text-lg md:text-xl leading-relaxed">
        {description}
      </p>
    )}
    
    <div class="pt-4">
      <Button 
        href={action.href} 
        variant="primary" 
        size="lg" 
        class="bg-white text-teal-900 hover:bg-teal-50 hover:text-teal-950 border-none shadow-lg"
      >
        {action.label}
      </Button>
    </div>
  </div>
</Section>