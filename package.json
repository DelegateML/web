{
  "name": "delegateml-sites",
  "private": true,
  "type": "module",
  "workspaces": [
    "sites/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:data\" \"npm run dev:esg\" \"npm run dev:proposal\"",
    "dev:data": "cd sites/data-reconciliation && npm run dev",
    "dev:esg": "cd sites/esg-reporting && npm run dev",
    "dev:proposal": "cd sites/proposal-desk && npm run dev",
    "build": "npm run build --workspaces",
    "build:all": "npm run build --workspaces",
    "preview": "npm run preview --workspaces",
    "clean": "rm -rf dist sites/*/dist sites/*/.astro"
  },
  "devDependencies": {
    "astro": "^5.2.0",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/vite": "^4.0.0",
    "typescript": "^5.3.0",
    "concurrently": "^9.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
